@model  MVC_CORE.Models.CompanyVM

@{
    ViewBag.Title = "My Profile";
}

<h2>Profile of Your Company</h2>

    
<table class="table">
    <tr><th>Profile's Entities</th><th>Values</th>
    <tr />

    <tr><td>Company Name</td><td> @Html.DisplayFor(modelItem => Model.CompanyName)</td>
    <tr />
    <tr><td>Company Description</td><td>@Html.DisplayFor(modelItem => Model.CompanyDescription)</td>
    <tr />
    <tr><td>Company Website</td><td> @Html.DisplayFor(modelItem => Model.CompanyWebsite)</td>
    <tr />
    <tr><td>Contact Name</td><td> @Html.DisplayFor(modelItem => Model.ContactName)</td>
    <tr />
    <tr><td>Contact Phone</td><td>@Html.DisplayFor(modelItem => Model.ContactPhone)</td>
    <tr />
    <tr><td>Preferable Language</td><td> @Html.DisplayFor(modelItem => Model.LanguageId)</td>
    <tr />
    <tr><td>Registration Date</td><td> @Html.DisplayFor(modelItem => Model.RegistrationDate) </td>
    <tr />
    <tr><td>Country</td><td> @Html.DisplayFor(modelItem => Model.Country)</td>
    <tr />
    <tr><td>Province</td><td> @Html.DisplayFor(modelItem => Model.Province)</td>
    <tr />
    <tr><td>City</td><td>@Html.DisplayFor(modelItem => Model.City)</td>
    <tr />
    <tr><td>Street</td><td> @Html.DisplayFor(modelItem => Model.Street)</td>
    <tr />
    <tr><td>Postal Code</td><td> @Html.DisplayFor(modelItem => Model.Postal_Code) </td>

    <tr />

</table>




<div class="navbar-collapse collapse">
    <h3><b>Pick Up Action</b></h3>
    @Html.ActionLink("Edit", "Edit","Company_Login") |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) <br />
    <ul class="nav navbar-nav">



        <li>@Html.ActionLink("Show My List of Positions", "ShowAll", "Job")</li>
        <li>@Html.ActionLink("Create New Position", "Create", "Job")</li>

    </ul>
</div>
